<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scanba.solidusandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity" />
        <activity android:name=".activities.ProductsActivity" />
        <activity android:name=".activities.ProductDetailsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="Cart">
        </activity>
        <activity
            android:name=".activities.checkout.EmailStepActivity"
            android:label="Email">
        </activity>
        <activity android:name=".activities.BaseActivity"></activity>
    </application>

</manifest>